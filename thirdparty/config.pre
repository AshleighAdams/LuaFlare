BASH_COMPLETION_DIR    = $(DESTDIR)%BASH_COMPLETION_DIR
SYSTEMD_UNIT_DIR       = $(DESTDIR)%SYSTEMD_UNIT_DIR
SYSVINIT_DAEMON_DIR    = $(DESTDIR)%SYSVINIT_DAEMON_DIR
